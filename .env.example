# Environment Configuration
USE_FALLBACK_MEMORY=True
DEBUG=True

# LLM Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here     # Format: sk-or-v1-...
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct:free
DEFAULT_MODEL=meta-llama/llama-3.3-70b-instruct:free
ENCRYPTION_KEY=your_encryption_key_here             # Required for data encryption
DEFAULT_LLM_MODEL=openrouter/meta-llama/llama-3.3-70b-instruct:free
FALLBACK_LLM_MODEL=openrouter/mistralai/mistral-small-3.2-24b-instruct:free
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=409
LLM_CACHE_TTL_HOURS=24

# Smart Model Management
ENABLE_SMART_MODEL_MANAGEMENT=true
ENABLE_PREMIUM_BACKUP=true
MODEL_FAILURE_THRESHOLD=3
MODEL_COOLDOWN_MINUTES=15
AUTO_MODEL_SWITCHING=true
DISABLE_SMART_LITELLM_PATCH=true

# Premium Backup Models
PREMIUM_BACKUP_1=openai/gpt-4o-mini
PREMIUM_BACKUP_2=anthropic/claude-3-haiku

# Updated Model Configuration (most reliable models prioritized)
DEFAULT_MODEL=meta-llama/llama-3.3-70b-instruct:free
FALLBACK_LLM_MODEL=openrouter/mistralai/mistral-small-3.2-24b-instruct:free

# Database Configuration
DATABASE_URL=sqlite:///./app.db

# Memory Configuration
MEMORY_PATH=./memory.jsonl

# Reminder Configuration
REMINDER_CHECK_INTERVAL=300

# API Keys (Required to enable respective provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY=your_perplexity_api_key_here     # Optional: Format: pplx-...
